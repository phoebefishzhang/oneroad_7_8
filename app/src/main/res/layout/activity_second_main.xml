<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".second_main">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.08"
        android:src="@drawable/hosp"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/hospital" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="#3F51B5"
            android:gravity="center"
            android:text="智能資訊約束照護策略"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:text="護理師:  "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/nursename"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/patientloginbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="50dp"
                android:background="@drawable/shape"
                android:text="病人登入"
                android:textColor="@color/white"
                android:textSize="18dp" />


        </LinearLayout>

        <Button
            android:id="@+id/table"
            android:background="@drawable/shape_red"
            android:layout_width="135dp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="上一位病人\n評估表"
            android:textSize="22dp"
            android:layout_marginLeft="10dp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nursename2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  護理師您好!"
                android:textColor="@color/black"
                android:textSize="25dp"></TextView>

            <Button
                android:id="@+id/logout"
                android:layout_width="58dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_blue"
                android:text="登出"
                android:textColor="@color/white"
                android:textSize="20dp"></Button>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="*請登入病人病歷號"
            android:textColor="@color/red"
            android:textSize="25dp"></TextView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>