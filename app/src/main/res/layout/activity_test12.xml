<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test1_2">
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.08"
        android:src="@drawable/hosp"
        ></ImageView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="管路留置(不含靜脈留置針)"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
            <CheckBox
                android:id="@+id/CB_none"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text=" 無"
                android:textSize="25dp"
                android:onClick="onCheckVoxClicked"/>
             <CheckBox
            android:id="@+id/CB_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" ENDO(氣管內管)"
            android:textSize="25dp"
            android:onClick="onCheckVoxClicked"/>
        <CheckBox
            android:id="@+id/CB_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" Tr.(氣切)"
            android:textSize="25dp"
            android:onClick="onCheckVoxClicked"/>

        <CheckBox
            android:id="@+id/CB_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" NG/ND/PEG"
            android:textSize="25dp"
            android:onClick="onCheckVoxClicked"/>
        <CheckBox
            android:id="@+id/CB_4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" CVC"
            android:textSize="25dp"
            android:onClick="onCheckVoxClicked"/>

        <CheckBox
            android:id="@+id/CB_5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" Double lumen/Perm-cath"
            android:textSize="25dp"
            android:onClick="onCheckVoxClicked"/>

        <CheckBox
            android:id="@+id/CB_6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" Foley"
            android:textSize="25dp"
            android:onClick="onCheckVoxClicked"/>

        <CheckBox
            android:id="@+id/CB_7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" A-sheath/V-sheath/TPM/IABP"
            android:textSize="25dp"
            android:onClick="onCheckVoxClicked"/>

        <CheckBox
            android:id="@+id/CB_8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text=" ECMO tube"
            android:textSize="25dp"
            android:onClick="onCheckVoxClicked"/>
            <CheckBox
                android:id="@+id/CB_9"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text=" 引流管(eg:pig-tail、PCN、Chest tube)"
                android:textSize="21dp"
                android:onClick="onCheckVoxClicked"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/CB_other1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:onClick="onCheckVoxClicked"
                android:text=" 其他:"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/other_road1Name"
                android:layout_width="163dp"
                android:layout_height="wrap_content"

                android:hint="管路名稱"
                android:textSize="20dp"
                android:visibility="invisible"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/CB_other2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:onClick="onCheckVoxClicked"
                android:text=" 其他:"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/other_road2Name"
                android:layout_width="163dp"
                android:layout_height="wrap_content"

                android:hint="管路名稱"
                android:textSize="20dp"
                android:visibility="invisible"></EditText>
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape"
                android:onClick="onClick"
                android:text="下  一  頁"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>